<center><h2> User </h2></center>
<p id="notice"><%= notice %></p>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Surname:</strong>
  <%= @user.surname %>
</p>
<p>
  <strong>Phone num:</strong>
  <%= @user.phone_num %>
</p>
<p>
  <strong>Role:</strong>
  <%= @user.role %>
</p>
<% if @user.role == 'Driver' %>
    <center><h2> Car </h2></center>
    <table class='table'>
      <thead>
      <tr>
        <th>Model</th>
        <th>Sits</th>
        <th>Driver</th>
        <th></th>
      </tr>
      </thead>
      <tbody>
      <% @user.cars.each do |car| %>
         <tr>
         <td><%= car.name %></td>
         <td><%= car.sits %></td>
         <td><%= car.driver_name %></td>
         </tr>
      <% end %>
      </tbody>
    </table>
<% end %>
<%= link_to 'All user', users_path %>
